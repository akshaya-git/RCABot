# =============================================================================
# Example Terraform Variables
# Copy this file to terraform.tfvars and fill in the values
# =============================================================================

# AWS Configuration
aws_region  = "us-east-1"
environment = "prod"
project_name = "proactive-monitor"

# VPC Configuration
vpc_cidr = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b", "us-east-1c"]

# EKS Configuration
cluster_name        = "monitoring-cluster"
cluster_version     = "1.29"
node_instance_types = ["t3.large"]
node_desired_size   = 2
node_min_size       = 1
node_max_size       = 4

# OpenSearch Configuration
opensearch_instance_type  = "t3.small.search"
opensearch_instance_count = 2
opensearch_volume_size    = 20

# Jira Configuration (Required)
jira_url       = "https://your-company.atlassian.net"
jira_project   = "OPS"
jira_email     = "service-account@your-company.com"
jira_api_token = "your-jira-api-token"

# Notification Configuration
notification_emails = [
  "ops-team@your-company.com",
  "oncall@your-company.com"
]

# CloudWatch Namespaces to Monitor
cloudwatch_namespaces = [
  "AWS/EC2",
  "AWS/EBS",
  "AWS/ECS",
  "AWS/EKS",
  "AWS/Lambda",
  "AWS/RDS",
  "AWS/ApplicationELB"
]

# Collection interval (seconds)
collection_interval = 60

# Tags
tags = {
  Project     = "ProactiveMonitor"
  ManagedBy   = "Terraform"
  Environment = "prod"
  Team        = "Platform"
}
